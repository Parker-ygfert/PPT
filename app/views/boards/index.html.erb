<div class="container">
  <h1>所有看板<h1>

  <!--
  <div id="board">
      <Board></Board>
  </div>
  -->
  
  <!-- <a href="/boards/new">新增看板1</a> -->
  <!-- <a href="<% new_board_path %>">新增看板2</a> -->
  <!-- 用 path 在開發過程中可以提早發現錯誤 -->
  <div class="row">
    <p class="links"><%= link_to "新增看板", :new_board %></p>
    <p class="links"><%= link_to "註冊", :sign_up_users %></p>
    <p class="links"><%= link_to "登入", :sign_in_users %></p>
  </div>
  
  
  <!-- <%= flash[:notice] %> -->
  <!-- <%= notice %> 新的寫法 -->
  <!-- 直接放在共用版面比較方便 -->
    
  <table>
    <thead>
      <tr>
        <th>編號</th>
        <th>看板</th>
        <th>中文敘述</th>
        <th>版主</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @boards.each do |board| %>
        <tr>
          <!-- <li><%= link_to board.title, '/board/#{board.id}' %></li> -->
          <td><%= board.id %></td>
          <td><%= link_to board.title, board %></td>
          <td><%= board.intro %></td>
          <td>暫缺</td>
          <td><%= link_to "編輯", edit_board_path(board) %></td>
          <td><%= link_to "刪除", board_path(board), method: "delete", data: {confirm: "確認刪除？"} %></td>
          <td><%= link_to "隱藏", hide_board_path(board), method: "put", data: {confirm: "真的要隱藏嗎？"} %></td>
          <!-- <li><%= link_to board.title, board %></li> -->
        </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= link_to "回首頁", :root %>
  </div>
  
</div>