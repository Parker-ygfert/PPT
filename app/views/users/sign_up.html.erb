<h1>安安你好請註冊新帳號</h1>
<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@user) do |f| %>

  <div>
    <%= f.label :account, "帳號" %>
    <%= f.text_field :account %>
  </div>

  <div>
    <%= f.label :nickname, "暱稱" %>
    <%= f.text_field :nickname %>
  </div>

  <div>
    <%= f.label :email, "信箱" %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password, "密碼" %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirm, "密碼確認" %>
    <%= f.password_field :password_confirm %>
  </div>

  <div>
    <%= f.label :gender, "性別" %>
    <%= f.text_field :gender %>
  </div>

  <div class="submit">
    <%= f.submit "註冊" %>
  </div>

<% end %>