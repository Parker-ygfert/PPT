<h1>註冊新帳號</h1>

<%= notice %>

<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %>
    </li>
    <% end %>
  </ul>
<% end %>


<%= form_with(model: @user) do |f| %>

  <%= f.label :account, '帳號' %>
  <%= f.text_field :account %>
  <br>
  <%= f.label :password, '密碼' %>
  <%= f.text_field :password %>
  <br>
  <%= f.label :name, '名稱' %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :email, 'Email' %>
  <%= f.text_field :email %>
  <br>
  <%= f.label :age, 'Age' %>
  <%= f.text_field :age %>
  <br>
  <%= f.label :born_date, '生日' %>
  <%= f.date_field :born_date %>
  <br>
  <%= f.submit '送出' %>

<% end %>